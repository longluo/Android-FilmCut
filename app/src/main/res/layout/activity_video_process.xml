<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".middlewareActivity.VideoProcessActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btnCutVideo"
            android:text="@string/cut_video_using_time"
            style="@style/ButtonStyle"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnImageToVideo"
            android:text="@string/image_to_video"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCutVideo" />

        <Button
            android:id="@+id/btnAddWaterMarkOnVideo"
            android:text="@string/add_water_mark_on_video"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnImageToVideo" />

        <Button
            android:id="@+id/btnAddTextOnVideo"
            android:text="@string/add_text_on_video"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddWaterMarkOnVideo" />

        <Button
            android:id="@+id/btnCombineImageVideo"
            android:text="@string/merge_image_and_video"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddTextOnVideo" />

        <Button
            android:id="@+id/btnCombineImages"
            android:text="@string/merge_images"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCombineImageVideo" />

        <Button
            android:id="@+id/btnCombineVideos"
            android:text="@string/merge_videos"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCombineImages" />

        <Button
            android:id="@+id/btnCompressVideo"
            android:text="@string/compress_a_video"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCombineVideos" />

        <Button
            android:id="@+id/btnExtractVideo"
            android:text="@string/extract_frame_from_video"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCompressVideo" />

        <Button
            android:id="@+id/btnExtractAudio"
            android:text="@string/extract_audio_from_video"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnExtractVideo" />

        <Button
            android:id="@+id/btnMotion"
            android:text="@string/fast_slow_motion_video"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnExtractVideo" />

        <Button
            android:id="@+id/btnReverseVideo"
            android:text="@string/reverse_video"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMotion" />

        <Button
            android:id="@+id/btnFadeInFadeOutVideo"
            android:text="@string/video_fade_in_and_fade_out"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnReverseVideo" />

        <Button
            android:id="@+id/btnVideoConvertIntoGIF"
            android:text="@string/video_to_gif"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFadeInFadeOutVideo" />

        <Button
            android:id="@+id/btnVideoRotateFlip"
            android:text="@string/video_rotate"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnVideoConvertIntoGIF" />

        <Button
            android:id="@+id/btnMergeVideoAndAudio"
            android:text="@string/merge_video_and_audio"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnVideoRotateFlip" />

        <Button
            android:id="@+id/btnRemoveAudioFromVideo"
            android:text="@string/audio_remove_from_video"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnVideoRotateFlip" />

        <Button
            android:id="@+id/btnMergeImageAndAudio"
            android:text="@string/merge_image_and_audio"
            style="@style/ButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRemoveAudioFromVideo" />

        <Button
            android:id="@+id/btnSetAspectRatio"
            android:text="@string/set_aspect_ratio"
            style="@style/ButtonStyle"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRemoveAudioFromVideo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>